<?php
include('db_connection.php');

// Получаем список студентов и курсов
$students_sql = "SELECT * FROM students";
$courses_sql = "SELECT * FROM courses";

$students_stmt = $pdo->query($students_sql);
$courses_stmt = $pdo->query($courses_sql);

echo "<form action='register_course.php' method='post'>";
echo "<label for='student_id'>Студент:</label>";
echo "<select id='student_id' name='student_id'>";
while ($student = $students_stmt->fetch(PDO::FETCH_ASSOC)) {
    echo "<option value='" . $student['id'] . "'>" . $student['name'] . "</option>";
}
echo "</select><br><br>";

echo "<label for='course_id'>Курс:</label>";
echo "<select id='course_id' name='course_id'>";
while ($course = $courses_stmt->fetch(PDO::FETCH_ASSOC)) {
    echo "<option value='" . $course['id'] . "'>" . $course['name'] . "</option>";
}
echo "</select><br><br>";

echo "<input type='submit' value='Зарегистрировать'>";
echo "</form>";
?>
