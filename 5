<?php
include('db_connection.php');

// Получаем список студентов и групп
$students_sql = "SELECT * FROM students";
$groups_sql = "SELECT * FROM groups";

$students_stmt = $pdo->query($students_sql);
$groups_stmt = $pdo->query($groups_sql);

echo "<form action='assign_group.php' method='post'>";
echo "<label for='student_id'>Студент:</label>";
echo "<select id='student_id' name='student_id'>";
while ($student = $students_stmt->fetch(PDO::FETCH_ASSOC)) {
    echo "<option value='" . $student['id'] . "'>" . $student['name'] . "</option>";
}
echo "</select><br><br>";

echo "<label for='group_id'>Группа:</label>";
echo "<select id='group_id' name='group_id'>";
while ($group = $groups_stmt->fetch(PDO::FETCH_ASSOC)) {
    echo "<option value='" . $group['id'] . "'>" . $group['name'] . "</option>";
}
echo "</select><br><br>";

echo "<input type='submit' value='Привязать'>";
echo "</form>";
?>
